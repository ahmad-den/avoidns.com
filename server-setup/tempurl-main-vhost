server {
    listen 443 ssl;
    http2 on;
    server_name www.avoidns.com;
    ssl_certificate /etc/nginx/ssl/avoidns.com.crt;
    ssl_certificate_key /etc/nginx/ssl/avoidns.com.key;
    return 301 https://avoidns.com$request_uri;
}

server {
    listen 443 ssl;
    http2 on;
    server_name avoidns.com www.avoidns.com;
    ssl_certificate /etc/nginx/ssl/avoidns.com.crt;
    ssl_certificate_key /etc/nginx/ssl/avoidns.com.key;
    ssl_protocols TLSv1.2;
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    # Security headers
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Root directory for the Next.js build output
    root /var/www/tempURLapp/frontend/.next;

    # Handle static files
    location /_next/static/ {
        alias /var/www/tempURLapp/frontend/.next/static/;
        expires 365d;
        access_log off;
    }

    # Handle public files
    location /public/ {
        alias /var/www/tempURLapp/frontend/public/;
        expires 365d;
        access_log off;
    }

    # Existing API configuration
    location /api/ {
        include proxy_params;
        proxy_pass http://unix:/var/www/tempURLapp/myproject.sock;
        set $cors_origin "";
        if ($http_origin ~* (http://localhost:3000|https://your-production-domain.com)) {
            set $cors_origin $http_origin;
        }
        add_header 'Access-Control-Allow-Origin' $cors_origin always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
        add_header 'Access-Control-Allow-Credentials' 'true' always;
        if ($request_method = 'OPTIONS') {
            return 204;
        }
    }

    # Main location block for Next.js
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
